{
  "name": "alpha-laundry",
  "version": "1.0.0",
  "description": "Hostel Laundry Management System - Full Stack Application",
  "scripts": {
    "frontend": "cd frontend && npm start",
    "backend": "cd backend && npm run dev",
    "dev": "concurrently \"npm run backend\" \"npm run frontend\"",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "build": "npm run build:backend && npm run build:frontend",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && npm test",
    "test": "npm run test:backend && npm run test:frontend",
    "cypress:open": "cypress open --config-file tests/cypress.config.ts",
    "cypress:run": "cypress run --config-file tests/cypress.config.ts",
    "test:e2e": "start-server-and-test frontend http://localhost:3000 cypress:run",
    "test:e2e:dev": "start-server-and-test frontend http://localhost:3000 cypress:open",
    "db:init": "node scripts/init-db.js",
    "db:seed": "node scripts/init-db.js --seed",
    "db:reset": "node scripts/resetDb.js"
  },
  "workspaces": ["frontend", "backend"],
  "dependencies": {
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.0",
    "@mui/material": "^5.15.11",
    "@tanstack/react-query": "^5.20.5",
    "axios": "^1.6.7",
    "date-fns": "^3.3.1",
    "dotenv": "^16.4.7",
    "formik": "^2.4.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.1",
    "recharts": "^2.12.0",
    "yup": "^1.3.3"
  },
  "devDependencies": {
    "@cypress/react18": "^2.0.1",
    "@testing-library/cypress": "^10.0.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "@types/react": "^18.2.57",
    "@types/react-dom": "^18.2.19",
    "@types/react-query": "^1.2.8",
    "bcrypt": "^5.1.1",
    "concurrently": "^8.2.2",
    "cypress": "^13.6.6",
    "pg": "^8.14.1",
    "start-server-and-test": "^2.0.3",
    "typescript": "^5.3.3"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
